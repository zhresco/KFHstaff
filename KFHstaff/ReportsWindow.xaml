<Window x:Class="KFHstaff.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отчёты" Height="500" Width="600">
    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3D8B40"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- Общая статистика -->
            <RowDefinition Height="Auto"/>
            <!-- Распределение по полу -->
            <RowDefinition Height="Auto"/>
            <!-- Распределение по ролям -->
            <RowDefinition Height="Auto"/>
            <!-- Выбор сотрудника -->
            <RowDefinition Height="*"/>
            <!-- Пространство -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Отчёты по сотрудникам" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   HorizontalAlignment="Center"/>

        <!-- Общая статистика -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Общая статистика:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="TxtTotalEmployees" 
                       FontSize="14" 
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="TxtAverageAge" 
                       FontSize="14"/>
        </StackPanel>

        <!-- Распределение по полу -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Распределение по полу:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="TxtGenderDistribution" 
                       FontSize="14"/>
        </StackPanel>

        <!-- Распределение по ролям -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Распределение по ролям:" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="TxtRoleDistribution" 
                       FontSize="14"/>
        </StackPanel>

        <!-- Выбор сотрудника для личной карточки -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,20" 
                    HorizontalAlignment="Center">
            <Label Content="Выберите сотрудника:" 
                   FontSize="14" 
                   VerticalAlignment="Center"/>
            <ComboBox x:Name="CmbEmployees" 
                      Width="200" 
                      FontSize="14" 
                      Margin="10,0,0,0" 
                      VerticalAlignment="Center"/>
            <Button x:Name="BtnGenerateT2" 
                    Content="Сформировать Т-2" 
                    Width="150" 
                    Margin="10,0,0,0" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnGenerateT2_Click"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="BtnExport" 
                    Content="Экспорт отчёта" 
                    Width="150" 
                    Margin="0,0,10,0" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnExport_Click"/>
            <Button x:Name="BtnBack" 
                    Content="Назад" 
                    Width="100" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>