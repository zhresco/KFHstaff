<Window x:Class="KFHstaff.DismissWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Увольнение сотрудника" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/ico.ico">
    <Grid Background="#F5F5F5" Margin="0,0,0,-38">
        <Border Background="White" CornerRadius="10" Margin="20">
            <StackPanel Margin="20">
                <TextBlock Text="Увольнение сотрудника" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <Label Content="Сотрудник:" FontSize="14"/>
                <ComboBox x:Name="CmbEmployee" FontSize="14" Margin="0,0,0,10"/>
                <Label Content="Дата увольнения:" FontSize="14"/>
                <DatePicker x:Name="DpDismissDate" FontSize="14" Margin="0,0,0,10"/>
                <Label Content="Причина:" FontSize="14"/>
                <TextBox x:Name="TxtReason" FontSize="14" Margin="0,0,0,10"/>
                <Button Content="Уволить" x:Name="BtnSubmit" Height="40" Background="#D32F2F" Foreground="White" FontSize="16" Click="BtnSubmit_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 